<odoo>
    <data>
    
        <record id="external_item_wizard_form_view" model="ir.ui.view">
            <field name="name">external.item.wizard.form.view</field>
            <field name="model">external.item.wizard</field>
            <field name="arch" type="xml">
                <form>
                    
                    <group>
                        <field name="external_item_ids" widget="many2many_tags"></field>
                    </group>
                    <footer>
                        <button string="Add" name="add_external_item" type="object" class="oe_highlight" />
                        <button string="Close" class="btn-default" special='cancel'/> <!--special cancel to not do anything-->
                    </footer>
                    
                </form>
            </field>
        </record>
        <record id="external_item_wizard_window_action" model="ir.actions.act_window">
            <field name="name">External Item</field>
            <field name="res_model">external.item.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
